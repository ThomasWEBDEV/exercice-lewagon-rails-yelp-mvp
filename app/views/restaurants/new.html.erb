<div class="container mt-4">
  <h1>Ajouter un nouveau Restaurant</h1>

  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Choisissez une catégorie" %>
    <%= f.submit "Créer le Restaurant", class: "btn btn-primary" %>
    <%= link_to "Retour à la liste", restaurants_path, class: "btn btn-secondary ms-2" %>
  <% end %>
</div>
